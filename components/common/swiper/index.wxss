/* components/swiper/index.wxss */

swiper{
  height: 100%;
}

.item-image {
  width: 100%;
  height: 100%;
}

.dots{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}

.dots .dot{
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: #e0dfdf;
  border-radius: 8rpx;
  transition: all .6s;
}

.dots .dot.active{
  width: 38rpx;
  background: #fff;
}