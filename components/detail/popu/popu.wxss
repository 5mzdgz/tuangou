/* components/detail/popu/popu.wxss */
.info-box {
  margin-top: -70rpx;
  width: 94%;
  margin-left: 3%;
  border-radius: 20rpx;
  box-shadow: 0px 5rpx 20rpx rgba(0, 0, 0, 0.16);
  padding-bottom: 20rpx;
}

.info-top {
  position: relative;
}

.price-box {
  border-top-left-radius: 20rpx;
  background: -webkit-linear-gradient(left, #f14556,rgb(247, 109, 67));
  height: 70rpx;
  padding-top: 10rpx;
  padding-left: 30rpx;
  width: 100%;
}

.price-box .price {
  font-size: 50rpx;
}

.o-price {
  margin-left: 10rpx;
}

.time-box {
  position: absolute;
  right: 0;
  bottom: 0rpx;
  color: #eeda26;
  z-index: 99;
  text-align: center;
  width: 190rpx;
  padding: 12rpx 15rpx 12rpx 0;
  border-top-right-radius: 20rpx;
  border-top-left-radius: 8rpx;
}

.triangle-l {
  position: absolute;
  left: -89rpx;
  bottom: 0rpx;
  width: 0;
  height: 0;
  z-index: 999;
  border-color:#555 transparent;
  border-width: 0 0 90rpx 90rpx;
  border-style: solid;
}

.info-title {
  line-height: 80rpx;
}

.info-title, .count-box {
  margin-left: 30rpx;
}

.count-lobal {
  margin-right: 15rpx;
}