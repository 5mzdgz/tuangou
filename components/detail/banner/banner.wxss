/* components/detail/banner/banner.wxss */

swiper{
  height: 100%;
}

.item-image {
  width: 100%;
  height: 100%;
}

.dots {
  position: absolute;
  left: 335rpx;
  bottom: 80rpx;
  justify-content: center;
  width: 80rpx;
  height: 30rpx;
  background-color: rgba(130, 136, 160, 0.5);
  border-radius: 20rpx;
}

.dots .dot{
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: #e0dfdf;
  border-radius: 8rpx;
  transition: all .6s;
}

.dots .dot.active{
  width: 38rpx;
  background: #fff;
}